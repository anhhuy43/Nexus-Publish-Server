# .env.sample

# Database Configuration
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
# Example: mysql://root:password@localhost:3306/nexus_publish_db?schema=public

# JWT Secret for authentication tokens
JWT_SECRET="YOUR_SUPER_SECRET_JWT_KEY_HERE"

# Number of salt rounds for bcrypt password hashing
SALT_ROUNDS=12

# Server Port
PORT=3000

# Firebase Admin SDK Service Account Key Path
# This path is relative to the project root (e.g., ./path/to/your/firebase-adminsdk.json)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH="./config/firebase-adminsdk-YOUR_PROJECT_ID.json"